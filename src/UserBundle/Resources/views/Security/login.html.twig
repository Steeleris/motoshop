{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form action="{{ path('fos_user_security_check') }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="form-group">
        <input class="form-control" placeholder="Username" type="text" id="username" name="_username"
               value="{{ last_username }}" required="required" />
    </div>
    <div class="form-group">
        <input class="form-control" placeholder="Password" type="password" id="password" name="_password"
               required="required" />
    </div>

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me" class="text-muted">Remember me</label>

    <button type="submit" id="_submit" name="_submit" class="btn btn-success pull-right">Login</button>
</form>
{% endblock fos_user_content %}