{% extends 'MotoBundle::layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron about-header">
                <h1>Hello,</h1>
                <p>
                    My name is Matej Karabínoš, you are very welcome in my MotoShop. Here you can see and buy some oldschool motorbike for you from my garage. Enjoy!
                </p>
            </div>
            {% for product in products %}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ asset('bundles/moto/uploads/' ~ product.image) }}" class="img-responsive">

                    <div class="caption">
                        <div class="row">
                            <div class="col-md-6 col-xs-6">
                                <h3>{{ product.title }}</h3>
                            </div>
                            <div class="col-md-6 col-xs-6 price">
                                <h3>
                                    <label>${{ product.price }}</label></h3>
                            </div>
                        </div>
                        <p>{{ product.about }}</p>

                        <div class="row">
                            {% if app.user %}
                                <div class="col-md-offset-6 col-md-6">
                                    <a data-product-id="{{ product.id }}" class="btn btn-success btn-block add-to-cart"
                                       data-toggle="modal" data-target="#addModal">
                                        <span class="glyphicon glyphicon-shopping-cart"></span> Add to cart
                                    </a>
                                </div>
                            {% else %}
                            {% endif %}
                        </div>
                        <p></p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}